<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="medicine_impact_tree" model="ir.ui.view">
            <field name="name">medicine impact tree</field>
            <field name="model">medicine.impact</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="gene"/>
                    <field name="sequence_variation"/>
                    <field name="variation_percent"/>
                </tree>
            </field>
        </record>

        <record id="medicine_impact_form" model="ir.ui.view">
            <field name="name">medicine impact form</field>
            <field name="model">medicine.impact</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4">
                            <field name="gene"/>
                            <field name="sequence_variation"/>
                            <field name="variation_percent"/>
                        </group>
                        <notebook>
                            <page string="藥物清單">
                                <group>
                                    <field name="medicine_data_code">

                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="medicine_impact_search" model="ir.ui.view">
            <field name="name">medicine impact search</field>
            <field name="model">medicine.impact</field>
            <field name="arch" type="xml">
                <search>

                </search>
            </field>
        </record>

        <record id="medicine_impact_action" model="ir.actions.act_window">
            <field name="name">藥物使用影響評估</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">medicine.impact</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>
    </data>
</odoo>